{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Storybook",
      "type": "shell",
      "command": "npm run storybook",
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Start Next.js Dev Server",
      "type": "shell",
      "command": "npm run dev",
      "group": "build",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Run Lint",
      "type": "shell",
      "command": "npm run lint",
      "group": "test",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Echo Test",
      "type": "shell",
      "command": "echo Hello World"
    },
    {
      "label": "Commit to Repo",
      "type": "shell",
      "command": "git add -A && echo 'Enter commit message:' && read msg && git commit -m \"$msg\" && git pull --rebase && git push",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Update with Repo",
      "type": "shell",
      "command": "git fetch --all && git pull --rebase",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Commit changes",
      "type": "shell",
      "command": "hugo && git add -A && echo 'Enter commit message:' && read msg && git commit -m \"$msg\" && git pull && git push",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Run Storybook",
      "type": "shell",
      "command": "npm run storybook",
      "group": "build",
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}
